{
  "name": "@leebrooks3/react",
  "version": "1.0.0",
  "description": "A library of core React things.",
  "main": "dist/index.js",
  "keywords": [
    "TypeScript"
  ],
  "author": "Lee Brooks <leebrooks93@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "antd": "^3.9.2",
    "connected-react-router": "^4.4.1",
    "history": "^4.7.2",
    "react": "^16.4.1",
    "react-dom": "^16.5.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-scripts-ts": "2.16.0",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@leebrooks3/tslint-config": "git+https://git@github.com/leebrooks3/tslint-config.git",
    "@types/faker": "^4.1.3",
    "@types/jest": "^23.3.2",
    "@types/history": "^4.7.0",
    "@types/node": "^10.9.4",
    "@types/react-redux": "^6.0.2",
    "faker": "^4.1.0",
    "jest": "^23.5.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "build": "node_modules/.bin/tsc",
    "test": "jest",
    "test:ci": "npm run test -- --coverage --runInBand",
    "test:dev": "npm run test -- --watch",
    "tslint": "node_modules/.bin/tslint 'src/**/*.ts'"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "build",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
